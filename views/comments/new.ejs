<% include ../partials/header %>
<header class="jumbotron bg-info text-light">
    <h1>YelpCamp</h1>
    <p>
        <h4>Let us know about <%= camp['name'] %></h4>
    </p>
</header>
<div class="p-3 form-group col-md-6">
    <form action="/camps/<%= camp['id'] %>/comments" method="POST">
        <input type="text" class="form-control mb-3" aria-label="Input Your Name" name="comment[author]" placeholder="Your Name" required="required">
        <textarea class="form-control mb-3" rows="6" aria-label="Input Comment about Camp" name="comment[text]" required="required"></textarea>
        <button class="btn btn-primary btn-md">Add a Campground</button>
    </form>
</div>
<a href="/">Home</a>
<% include ../partials/footer %>