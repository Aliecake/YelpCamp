<% include ../partials/header %>
<header class="jumbotron bg-secondary">
    <h1>YelpCamp</h1>
    <p>
        <h4>Comment on your time at <%= camp['name'] %></h4>
    </p>
</header>
<div class="p-3 form-group col-md-6">
    <form action="/camps/<%= camp['id'] %>/comments" method="POST">
        <textarea class="form-control mb-3" rows="6" aria-label="Input Comment about Camp" name="comment[text]" required="required"></textarea>
        <button class="btn btn-primary btn-md">Let us know about <%= camp['name'] %></button>
    </form>
</div>
<a href="/">Home</a>
<% include ../partials/footer %>